<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.example.saramnexttosaram.login.LoginViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_login_id"
            android:text="LOGO"
            android:textSize="80dp"
            android:fontFamily="casual"/>

        <EditText
            android:id="@+id/et_login_id"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="ID"
            android:text="@={viewModel.id}"/>

        <EditText
            android:id="@+id/et_login_pw"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/et_login_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Password"
            android:text="@={viewModel.password}"/>

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Login"
            android:fontFamily="casual"
            android:textSize="30dp"
            android:onClick="@{(view) -> viewModel.login(view)}"/>

        <TextView
            android:id="@+id/tv_login_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_login_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="JOIN"
            android:fontFamily="casual"
            android:textSize="25dp"
            android:onClick="@{() -> viewModel.joinActivity()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>